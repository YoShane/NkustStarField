@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!-- Nav -->
<nav id="nav">
    <ul>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index"><span class="fa fa-home"></span></a>
        </li>
        <li>
            <a asp-area="" asp-controller="Equipments" asp-action="Index"><span class="fa fa-list"></span></a>
        </li>
        <li>
            <a asp-area="" asp-controller="BorrowOrders" asp-action="Index"><span class="fa fa-book"></span></a>
        </li>
        @if (SignInManager.IsSignedIn(User)) {
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index"><span class="fa fa-folder-open-o"></span></a>
            </li>
        } else {
            <li>
                <a asp-area="Identity" asp-page="/Account/Login"><span class="fa fa-sign-in"></span></a>
            </li>
        }

    </ul>
</nav>