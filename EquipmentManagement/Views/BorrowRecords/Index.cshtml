@model IEnumerable<EquipmentManagement.Models.BorrowRecord>

@{
    ViewData["Title"] = "訂單項目";
}

<h1>訂單項目管理</h1>

<p>
    <a asp-action="Create">項目新增</a> | <a asp-area="" asp-controller="BorrowOrders" asp-action="Index">回訂單管理</a>
</p>
<table class="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BorrowOrder.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantuty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowOrder.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Quantuty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.id">編輯</a> |
                <a asp-action="Delete" asp-route-id="@item.id">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
