@model EquipmentManagement.Models.BorrowOrder

@{
    ViewData["Title"] = "Delete";
}

<h1>確認刪除</h1>

<h3>刪除這筆訂單將連鎖刪除底下所有紀錄</h3>
<div>
    <h4> 編號- @Html.Raw(Model.Id) ( @Html.Raw(string.Format("{0:yyyyMMdd}{1:00}", Model.Borrow_time, Model.Id)) )</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stu_mail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stu_mail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Borrow_time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Borrow_time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Restore_time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Restore_time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Restore_state)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Restore_state)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Remark)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remark)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index">回到上一頁</a>
    </form>
</div>
